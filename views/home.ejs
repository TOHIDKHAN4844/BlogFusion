<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head.ejs")  %>
    <title>Home Page</title>
    <style>
        body {
            background-image: url(/images/bg2.jpg);
            font-family: 'Poppins', sans-serif;
            background-color: #f7f9fc;
        }

        .container {
            margin-top: 30px;
        }

        .card {
            background: #ffffff;
            border: none;
            border-radius: 10px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.3);
        }

        .card-title {
            text-align: center;
            font-weight: bold;
            color: #2c3e50;
        }

        .btn-primary {
            display: block; /* Makes the image behave like a block element for centering */
            margin: 0 auto;
            background-color: #3498db;
            border: none;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #2980b9;
        }

        .card-img-top {
            border-radius: 10px 10px 0 0;
            height: 400px;
            object-fit: cover;
        }

        footer {
            margin-top: 50px;
            background-color: #2c3e50;
            color: white;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <%- include("partials/nav.ejs")  %>
   
    <div class="container">
       <div class="row row-cols-1 row-cols-md-3 g-4">
        <% blogs.forEach(blog => { %>
            <div class="col">
                <div class="card">
                    <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover">
                    <div class="card-body">
                      <h5 class="card-title"><%= blog.title %></h5>
                      <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        <% }) %>
       </div>
    </div>

    <footer>
        <p>&copy; 2025 BlogFusion | All rights reserved.</p>
    </footer>

    <%- include("partials/scripts.ejs")  %>
</body>
</html>
